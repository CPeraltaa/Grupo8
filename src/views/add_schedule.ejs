<!DOCTYPE html>
<html lang="en">
        <%include partial/_header_prov %>


        <form class="form-horizontal" role="form" method="post" action="/signup" onSubmit="return checkblank(this);">
            <% if (message.length > 0) { %>
                                                                                        <div class="alert alert-success col-sm-12"><%= message %></div>
                                                                            <% } %>
            <div id="signupalert" style="display:none" class="alert alert-danger">
                <p>Error:</p>
                <span></span>
            </div>
                
            <div class="form-group">
                    <label for="first_name" class="col-md-3 control-label">Ingresa una descripcion</label>
                    <div class="col-md-2">
                        <input type="text" class="form-control" name="first_name" placeholder="Nombre">
                    </div>
                </div>
             <div class="form-group">
                <label for="first_name" class="col-md-3 control-label">Selecciona una fecha</label>
                <div class="col-md-9">
                        <input type='date' name="myDate" id="myDate" data-date-format="DD MMMM YYYY" max="2019-11-12"></input>
                    </div>
            </div>
           
            
            <div class="form-group">
                <!-- Button -->                                       
                <div class="col-md-offset-3 col-md-9">
                        <button type="button" class="btn btn-primary" onclick="myFunction()">
                                Seleccionar fecha</button>
                </div>
            </div>
            
            
            
            
        </form>

        <%- include partial/_footer %>